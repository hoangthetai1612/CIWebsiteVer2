                    button(class="animate__animated wow animate__fadeInLeft" style="animation-delay: 0.8s") View More
            .col-md-6.col-12.d-flex.justify-content-end
                .product-img(data-tilt).product-img-respon
                    img( class="product-mia product-mia-respon animate__animated wow animate__fadeInRight" , style="animation-delay: 1.1s" src="images/bustracker.png", alt="")
